{
  "mcpServers": {
  },
  "powers": {
    "mcpServers": {
      "power-github-github-mcp": {
        "type": "mcp",
        "description": "GitHub公式MCPサーバー",
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-github"
        ],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
        },
        "disabled": false,
        "autoApprove": [
          "create_pull_request"
        ],
        "disabledTools": [
          "mcp_github_create_repository",
          "mcp_github_fork_repository"
        ]
      },
      "power-notion-notion-mcp": {
        "type": "sse",
        "description": "Notion公式MCPサーバー",
        "command": "npx",
        "args": [
          "-y",
          "mcp-remote",
          "https://mcp.notion.com/mcp"
        ],
        "disabled": false,
        "disabledTools": [
          "notion-get-user",
          "notion-list-agents",
          "notion-duplicate-page",
          "notion-move-pages",
          "notion-create-pages",
          "notion_create_database",
          "notion_update_database"
        ]
      }
    }
  }
}